@model RegisterViewModel 

<div class="register-container">
    <!-- Tittel for registreringsskjemaet -->
    <h2 class="login-title">Registrer deg</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <!-- E-postfelt -->
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "E-post")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <!-- Passordfelt -->
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Passord")
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <!-- Bekreft passordfelt -->
        <div class="form-group" style="margin-bottom: 10px;">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>

        <!-- Sendeknapp for skjema -->
        <button type="submit" class="btn btn-success" style="margin-bottom: 10px;">
            Registrer deg
        </button>
    }

    <!-- Link til innloggingsside for eksisterende brukere -->
    <p>Har du allerede en konto? <a href="@Url.Action("LoggInn", "Account")">Logg inn her</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .register-container {
            width: 500px;
            margin: 0 auto;
            padding: 20px;
            background: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
        }

        .btn-success {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }
    </style>
}
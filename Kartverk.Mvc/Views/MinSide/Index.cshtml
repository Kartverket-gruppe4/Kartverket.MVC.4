@model Kartverk.Mvc.Models.MinSide.MinSideViewModel

@{
    ViewBag.Title = "Min Side";
    Layout = "_Layout";
}

<!-- Main container -->
<div class="container mt-4">

    <!-- Profile Section -->
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="ms-2">Velkommen til Din Side:</span>
            </div>
            <!-- Placeholder for user status (like 'No Errors') -->
            <a href="@Url.Action("Index", "Feilmelding")" class="btn btn-success">
                <strong>Meld inn en feil</strong>
            </a>
        </div>
    </div>

    <!-- Divider -->
    <hr />

    <!-- Sidebar Menu (Links) -->
    <div class="list-group">
        <!-- My Page Link -->
        <a href="#" class="list-group-item list-group-item-action">
            <i class="bi bi-person"></i> Min side
        </a>

        <!-- Submissions Link -->
        <a href="#" class="list-group-item list-group-item-action">
            <i class="bi bi-pencil-square"></i> Mine innmeldinger
        </a>

        <!-- Inbox/Chat Link -->
        <a href="#" class="list-group-item list-group-item-action">
            <i class="bi bi-envelope"></i> Innboks
        </a>

        <!-- Help & Contact Link -->
        <a href="#" class="list-group-item list-group-item-action">
            <i class="bi bi-info-circle"></i> Hjelp & Kontakt
        </a>

        <!-- Log out Link -->
        <a href="#" class="list-group-item list-group-item-action">
            <i class="bi bi-box-arrow-right"></i> Logg ut
        </a>
    </div>
</div>

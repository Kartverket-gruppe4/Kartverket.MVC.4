@model HomeViewModel

@{
    ViewData["Title"] = "Hjem";  // Setter tittelen på siden
}

<!-- Bakgrunn og sentrert innhold -->
<div class="content-background h-100 w-100 justify-content-center d-flex align-content-center">
    <div class="centered-box">
        <!-- Tittel og beskrivelse -->
        <h1 class="display-4">Rett i kartet</h1>
        <p>Vil du sende inn en feilmelding? Logg inn eller registrer deg.</p>
        
        <!-- Knapper for innlogging eller registrering -->
        <a class="btn btn-success mt-3" type="button" href="@Url.Action("LoggInn", "Account")">Logg inn / Registrer deg</a>
    </div>
</div>

<!-- Admin Link -->
<div class="admin-link-container">
    <a href="@Url.Action("AdminLogin", "Home")" class="admin-link">Admin</a>  <!-- Link til admin på siden -->
</div>

<!-- Custom CSS to position the admin link -->
<style>
    .admin-link-container { /* Container for the admin link */
        position: fixed; /* Plasserer lenken fast i hjørnet */
        bottom: 10px; /* 10px fra bunnen */
        left: 10px; /* 10px fra venstre kant */
        z-index: 1000; /* Sørger for at lenken vises over andre elementer */
    }

    .admin-link { /* Stil for admin-linken */
        color: #28a745; /* Lys grønn farge på teksten */
        font-size: 16px; /* Skriftstørrelse */
        text-decoration: none; /* Fjerner understreking */
        opacity: 1; /* Gjør lenken helt synlig */
        transition: opacity 0.3s, color 0.3s; /* Legger til en overgangseffekt for farge og opasitet */
    }

        .admin-link:hover { /* Stil ved hover (når musepekeren er over lenken) */
            color: #218838; /* Mørkere grønn ved hover */
            opacity: 0.8; /* Reduserer litt på opasiteten ved hover */
        }
</style>





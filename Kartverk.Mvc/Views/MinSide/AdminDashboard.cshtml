@model Kartverk.Mvc.Models.AdminFeilmelding.AdminFeilmeldingViewModel
@{
    ViewBag.Title = "Admin Dashboard";  // Setter tittelen på siden som "Admin Dashboard"
}

<div class="container mt-4">
    <h3>Velkommen til Admin Dashboard</h3>  <!-- Vist som en velkomstoverskrift -->
    <p>Her kan du utføre admin-oppgaver.</p>  <!-- Informerer brukeren om at de kan utføre admin-oppgaver på denne siden -->

    <!-- Seksjon for å vise innsendte data -->
    <div id="submitted-data" class="mt-4">
        <h4>Dine verktøy:</h4>  <!-- Overskrift for verktøyseksjonen -->
        <ul id="submission-list"></ul>  <!-- Liste for innsendte verktøy -->
    </div>
    
    <!-- Meny -->
    <div class="list-group">
        <!-- Link til Feilmeldinger -->
        <a href="@Url.Action("Index", "AdminFeilmelding")" class="list-group-item list-group-item-action">
            <i class="bi bi-pencil-square"></i> Feilmeldinger
        </a>

        <a href="@Url.Action("Index", "AdminInnboks")" class="list-group-item list-group-item-action">
            <i class="bi bi-envelope"></i> Innboks
        </a>

        <a href="@Url.Action("LoggUt", "LoggUt")" class="list-group-item list-group-item-action">
            <i class="bi bi-box-arrow-right"></i> Logg ut
        </a>
    </div>
</div>

<!-- Egendefinert skript for å håndtere skjema-innsending -->
<script>
    document.getElementById('submission-form').addEventListener('submit', function (event) {
        event.preventDefault(); // Forhindrer at skjemaet blir sendt på vanlig måte

        // Hent skjema-data
        const email = document.getElementById('email').value;
        const message = document.getElementById('message').value;

        // Lag et nytt listeelement
        const listItem = document.createElement('li');
        listItem.textContent = `$(${email}): ${message}`;

        // Legg til det nye elementet i innsendingslisten
        document.getElementById('submission-list').appendChild(listItem);

        // Tøm skjema-feltene
        document.getElementById('submission-form').reset();
    });
</script>


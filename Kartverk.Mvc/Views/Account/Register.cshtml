@model RegisterViewModel 

<div class="container">
    <!-- Tittel for registreringsskjemaet -->
    <h2>Registrer deg</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <!-- E-postfelt -->
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "E-post")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <!-- Passordfelt -->
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Passord")
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <!-- Bekreft passordfelt -->
        <div class="form-group" style="margin-bottom: 10px;">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>

        <!-- Sendeknapp for skjema -->
        <button type="submit" class="btn btn-success" style="margin-bottom: 10px;">
            Registrer deg
        </button>
    }

    <!-- Link til innloggingsside for eksisterende brukere -->
    <p>Har du allerede en konto? <a href="@Url.Action("LoggInn", "Account")">Logg inn her</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@using System.Collections.Generic
@model IEnumerable<Kartverk.Mvc.Models.Feilmelding.FeilmeldingViewModel>

@{
    ViewData["Title"] = "Oversikt over feilmeldinger";
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/popup.css"> <!-- Lenker til popup.css-filen -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Linker til Font Awesome for ikoner -->
</head>
<body>

    <h2>Oversikt over feilmeldinger</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nr</th>
                <th>Kategori</th>
                <th>Kommune</th>
                <th>Dato</th>
                <th>Mer</th> <!-- Endret fra "Handling" til "Mer" -->
            </tr>
        </thead>
        <tbody>
            @if (Model.Any()) // Sjekker om det er noen feilmeldinger i listen
            {
                foreach (var feilmelding in Model)
                {
                    <tr>
                        <td>@feilmelding.Id</td>
                        <td>@feilmelding.Kategori</td> <!-- Oppdatert til Kategori -->
                        <td>@feilmelding</td>
                        <td>@feilmelding.Dato.ToString("dd.MM.yyyy")</td> <!-- Formaterer datoen -->
                        <td>
                            <button class="view-button" onclick="openPopup('@feilmelding.Beskrivelse', '@feilmelding.Kategori', '@feilmelding.Dato.ToString("dd.MM.yyyy")', 'Ingen kommune', 'Pågående', '#')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td> <!-- Legger til knappen ved siden av datoen -->
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Ingen feilmeldinger funnet.</td> <!-- Oppdatert colspan til 5 -->
                </tr>
            }
        </tbody>
    </table>

    <!-- Pop-up Vindu -->
    <div id="popup" class="popup">
        <div class="popup-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <h3>Feilmelding Detaljer</h3>
            <div class="popup-inner-content">
                <!-- Venstre seksjon -->
                <div class="left-section">
                    <p><strong>Beskrivelse:</strong> <span id="popup-description"></span></p>
                    <p><strong>Kategori:</strong> <span id="popup-category"></span></p>
                    <p><strong>Dato:</strong> <span id="popup-date"></span></p>
                    <p><strong>Kommune:</strong> <span id="popup-municipality">Ingen kommune</span></p>
                    <p><strong>Status:</strong> <span id="popup-status">Pågående</span></p>
                </div>

                <!-- Separator (strek i midten) -->
                <div class="separator"></div>

                <!-- Høyre seksjon -->
                <div class="right-section">
                    <p><strong>Kartutsnitt:</strong></p>
                    <div class="map-placeholder">Kart kommer her</div>
                    <p><strong>Vedlegg:</strong></p>
                    <a href="#" id="popup-attachment">Last ned vedlegg</a> <!-- Ikke-fungerende lenke -->
                </div>
            </div>
        </div>
    </div>
    <script>
        function openPopup(description, category, date, municipality, status, attachmentUrl) {
            document.getElementById('popup-description').innerText = description; // Oppdaterer beskrivelse
            document.getElementById('popup-category').innerText = category; // Oppdaterer kategori
            document.getElementById('popup-date').innerText = date; // Oppdaterer dato
            document.getElementById('popup-municipality').innerText = municipality; // Oppdaterer kommune
            document.getElementById('popup-status').innerText = status; // Oppdaterer status
            document.getElementById('popup-attachment').setAttribute('href', attachmentUrl); // Oppdaterer vedleggslenke

            const popup = document.getElementById('popup');
            popup.style.display = 'block'; // Viser popup
            setTimeout(() => { popup.style.opacity = 1; }, 10); // Gjør popup synlig med en liten forsinkelse for animasjonseffekt
        }

        function closePopup() {
            const popup = document.getElementById('popup');
            popup.style.opacity = 0; // Skjuler popup med animasjon
            setTimeout(() => { popup.style.display = 'none'; }, 300); // Forsinker fjerning fra visningen for å avslutte animasjonen
        }

        // Lukk pop-up når brukeren klikker utenfor innholdet
        window.onclick = function (event) {
            const popup = document.getElementById('popup');
            if (event.target == popup) {
                closePopup();
            }
        }
    </script>
</body>
</html>

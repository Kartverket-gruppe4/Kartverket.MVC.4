@model Kartverk.Mvc.Models.MinSide.MinSideViewModel

@{
    ViewBag.Title = "Min Side";  
    Layout = "_Layout";
}

<!-- Hoved container -->
<div class="container mt-4"> 

    <!-- Profil seksjon -->
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="fs-4">Velkommen til Din Side, @Model.Email!</span> 
            </div>
            <!-- Placeholder for bruker status (f.eks 'Ingen feil') -->
            <a href="@Url.Action("Index", "Feilmelding")" class="btn btn-success"> 
                <strong>Meld inn en feil</strong>  <!-- Tekst for knappen -->
            </a>
        </div>
    </div>

    <!-- Divider -->
    <hr /> 

    <!-- Bruker informasjon -->
    <div class="row">
        <div class="col-12">
            <h5>Din informasjon:</h5> 
            <p><strong>Email:</strong> @Model.Email</p> 
        </div>
    </div>

    <!-- Meny -->
    <div class="list-group"> 
        <!-- Link til brukerens innsednte feilmeldinger -->
        <a href="@Url.Action("MineInnmeldinger", "MinSide")" class="list-group-item list-group-item-action">  
            <i class="bi bi-pencil-square"></i> Mine Feilmeldinger 
        </a>

        <a href="@Url.Action("Index", "HjelpKontakt")" class="list-group-item list-group-item-action"> 
            <i class="bi bi-info-circle"></i> Hjelp & Kontakt 
        </a>
        
        <form asp-action="LoggUt" asp-controller="Account" method="post" class="list-group-item list-group-item-action d-inline-block">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link p-0 text-decoration-none">
                <i class="bi bi-box-arrow-right"></i> Logg ut
            </button>
        </form>

    </div>
</div>

